{
  "name": "@vivafolio/block-loader",
  "version": "0.1.0",
  "description": "Secure Block Protocol loader for Vivafolio webviews with integrity checking and dependency sandboxing",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "default": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:esm-wrapper",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm-wrapper": "cp src/esm-wrapper.mjs dist/index.mjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "block-protocol",
    "vivafolio",
    "webview",
    "loader",
    "security",
    "integrity"
  ],
  "author": "Vivafolio Team",
  "license": "MIT",
  "dependencies": {
    "@blockprotocol/graph": "^0.3.4",
    "@vivafolio/indexing-service": "file:../indexing-service",
    "@vivafolio/block-resources-cache": "file:../block-resources-cache",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
