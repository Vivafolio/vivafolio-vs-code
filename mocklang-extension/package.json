{
  "name": "mocklang-extension",
  "displayName": "Mocklang (Test Only)",
  "description": "Mock language extension that starts a simple LSP server to emit VivafolioBlock diagnostics for E2E tests.",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mocklang"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mocklang",
        "aliases": [
          "Mocklang"
        ],
        "extensions": [
          ".mocklang"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p ."
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "22",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0"
  }
}
