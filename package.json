{
  "name": "vivafolio",
  "displayName": "Vivafolio",
  "description": "Inline webview widgets triggered by Hint diagnostics across languages (Lean, Nim).",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.85.0"
  },
  "enabledApiProposals": [
    "editorInsets"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Vivafolio",
      "properties": {
        "vivafolio.localBlockDirs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Array of local directories containing block source code. When blocks are loaded from these directories, they completely override remote sources. Supports multiple directories with configurable priority ordering."
        },
        "vivafolio.enableLocalDevelopment": {
          "type": "boolean",
          "default": false,
          "description": "Enable local block development mode. When enabled, the extension will watch local block directories and provide real-time updates."
        }
      }
    },
    "keybindings": [
      {
        "command": "vivafolio.executeRuntimeFile",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      }
    ],
    "commands": [
      {
        "command": "vivafolio.showInlineWidget",
        "title": "Vivafolio: Show Inline Widget"
      },
      {
        "command": "vivafolio.getLastMessage",
        "title": "Vivafolio: Get Last Widget Message"
      },
      {
        "command": "vivafolio.executeRuntimeFile",
        "title": "Vivafolio: Execute Runtime File"
      },
      {
        "command": "vivafolio.reloadLocalBlocks",
        "title": "Vivafolio: Reload Local Blocks",
        "description": "Reload all blocks from local development directories"
      },
      {
        "command": "vivafolio.openLocalBlockSettings",
        "title": "Vivafolio: Open Local Block Settings",
        "description": "Open VS Code settings for local block development"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run -s compile",
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "lint": "echo 'no lint configured'",
    "package:vsix": "vsce package",
    "test:e2e:lean-nim": "node test/e2e-lean-nim.js",
    "test:e2e:d": "node test/e2e-d.js",
    "test:e2e:stub": "node test/e2e-stub.js",
    "test:e2e:connectivity": "node test/e2e-connectivity.js",
    "test:scenario:basic-comms": "node test/scenarios/basic-comms.js",
    "test:scenario:callsite-diagnostics": "node test/scenarios/callsite-diagnostics.js",
    "test:e2e:vivafolioblock": "npx playwright test test/e2e-vivafolioblock.js",
    "test:e2e:vivafolioblock:headed": "npx playwright test test/e2e-vivafolioblock.js --headed",
    "test:e2e:blockprotocol-integration": "node test/e2e-blockprotocol-integration.js",
    "test:runtime:vivafolioblock": "node test/validate-runtime-vivafolioblock.js",
    "test:e2e:mock-lsp-client": "node test/e2e-mock-lsp-client.js",
    "test:e2e:lsp-syntax-error": "node test/e2e-lsp-syntax-error.test.js",
    "test:vscode:inset-management": "node ./test/suite/index.js",
    "test:wdio": "npx wdio run wdio.conf.ts",
    "test:wdio:single-block": "npx wdio run wdio.conf.ts --spec test/wdio/specs/single-block.e2e.ts",
    "test:wdio:two-blocks": "npx wdio run wdio.conf.ts --spec test/wdio/specs/two-blocks-interaction.e2e.ts",
    "test:wdio:synchronization": "npx wdio run wdio.conf.ts --spec test/wdio/specs/two-blocks-synchronization.e2e.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^24.3.1",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.8",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^3.0.0",
    "@wdio/cli": "^9.19.2",
    "@wdio/globals": "^8.46.0",
    "@wdio/local-runner": "^9.19.2",
    "@wdio/mocha-framework": "^9.19.2",
    "@wdio/spec-reporter": "^9.19.2",
    "mocha": "^11.7.2",
    "typescript": "^5.4.0",
    "vscode-jsonrpc": "^8.2.0",
    "wdio-chromedriver-service": "^8.1.1",
    "wdio-vscode-service": "^6.1.3"
  },
  "dependencies": {
    "@vivafolio/block-loader": "file:./packages/block-loader",
    "@vivafolio/block-resources-cache": "file:./packages/block-resources-cache",
    "@vivafolio/indexing-service": "file:./packages/indexing-service",
    "@blockprotocol/graph": "^0.3.4",
    "vscode-languageclient": "^9.0.1",
    "ws": "^8.14.2"
  }
}
