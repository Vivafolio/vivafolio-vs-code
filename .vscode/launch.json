{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch VS Code E2E",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/vscode-e2e.sh",
      "args": [],
      "env": {
        "VIVAFOLIO_DEBUG": "1",
        "VIVAFOLIO_CAPTURE_WEBVIEW_LOGS": "1"
      },
      "console": "integratedTerminal",
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Attach to Extension Host",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "presentation": {
        "group": "extension",
        "order": 1
      }
    },
    {
      "name": "Debug Extension (Launch)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionDevelopmentPath=${workspaceFolder}/mocklang-extension",
        "--enable-proposed-api local.vivafolio",
        "--disable-workspace-trust"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "sourceMaps": true,
      "preLaunchTask": "npm: compile",
      "presentation": {
        "group": "extension",
        "order": 3
      }
    },
    {
      "name": "Debug Webview (Attach)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "sourceMaps": true,
      "presentation": {
        "group": "webview",
        "order": 1
      }
    },
    {
      "name": "Debug Tests (Attach)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "sourceMaps": true,
      "presentation": {
        "group": "test",
        "order": 1
      }
    },
    {
      "name": "Attach to Mock LSP Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "timeout": 30000,
      "restart": true,
      "presentation": {
        "group": "lsp",
        "order": 1
      }
    },
    {
      "name": "Debug Block Protocol POC Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/tsx",
      "args": [
        "watch",
        "${workspaceFolder}/apps/blockprotocol-poc/src/server.ts"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}/apps/blockprotocol-poc",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "presentation": {
        "group": "blockprotocol",
        "order": 1
      }
    },
    {
      "name": "Debug Block Protocol POC Server (Frameworks)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/tsx",
      "args": [
        "watch",
        "${workspaceFolder}/apps/blockprotocol-poc/src/server.ts"
      ],
      "env": {
        "NODE_ENV": "development",
        "ENABLE_FRAMEWORK_WATCH": "true"
      },
      "cwd": "${workspaceFolder}/apps/blockprotocol-poc",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "presentation": {
        "group": "blockprotocol",
        "order": 2
      }
    },
    {
      "name": "Extension Development (Block Focus)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/mocklang-extension",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--enable-proposed-api local.vivafolio",
        "--disable-workspace-trust",
        "--new-window",
        "${workspaceFolder}/test/projects/vivafolio-data-examples"
      ],
      "env": {
        "VIVAFOLIO_DEBUG": "1",
        "VIVAFOLIO_CAPTURE_WEBVIEW_LOGS": "1"
      },
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "presentation": {
        "group": "extension",
        "order": 4
      }
    },
    {
      "name": "Extension + Block Dev Server",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/mocklang-extension",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--enable-proposed-api local.vivafolio",
        "--disable-workspace-trust",
        "--new-window",
        "${workspaceFolder}/test/projects/vivafolio-data-examples"
      ],
      "env": {
        "VIVAFOLIO_DEBUG": "1",
        "VIVAFOLIO_CAPTURE_WEBVIEW_LOGS": "1",
        "BLOCK_DEV_SERVER_PORT": "3001"
      },
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "npm: watch",
      "postDebugTask": "build-blocks-watch",
      "presentation": {
        "group": "extension",
        "order": 5
      }
    },
    {
      "name": "Block Development Only",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/npm",
      "args": ["run", "watch"],
      "cwd": "${workspaceFolder}/blocks/color-picker",
      "console": "integratedTerminal",
      "presentation": {
        "group": "block-dev",
        "order": 1
      }
    },
    {
      "name": "Block Protocol E2E Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": [
        "test/e2e-blockprotocol-integration-complete.js",
        "--timeout",
        "60000"
      ],
      "console": "integratedTerminal",
      "presentation": {
        "group": "test",
        "order": 2
      }
    },
    {
      "name": "Runtime Path Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test/validate-runtime-vivafolioblock.js",
      "console": "integratedTerminal",
      "presentation": {
        "group": "test",
        "order": 3
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Extension + LSP (Launch)",
      "configurations": [
        "Launch VS Code E2E",
        "Attach to Extension Host",
        "Attach to Mock LSP Server"
      ],
      "presentation": {
        "group": "extension",
        "order": 2
      },
      "stopAll": true
    }
  ]
}
