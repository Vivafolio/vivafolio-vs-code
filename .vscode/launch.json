{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Extension Host",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "presentation": {
        "group": "extension",
        "order": 1
      }
    },
    {
      "name": "Debug Extension (Launch)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionDevelopmentPath=${workspaceFolder}/mock-language-extension",
        "--enable-proposed-api local.vivafolio",
        "--disable-workspace-trust"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "sourceMaps": true,
      "preLaunchTask": "npm: compile",
      "presentation": {
        "group": "extension",
        "order": 2
      }
    },
    {
      "name": "Debug Webview (Attach)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "sourceMaps": true,
      "presentation": {
        "group": "webview",
        "order": 1
      }
    },
    {
      "name": "Debug Tests (Attach)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "sourceMaps": true,
      "presentation": {
        "group": "test",
        "order": 1
      }
    },
    {
      "name": "Attach: Mock LSP Server (6009)",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": true,
      "timeout": 20000,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Attach: Mock LSP Server (env port)",
      "type": "node",
      "request": "attach",
      "port": "${env:VIVAFOLIO_LSP_INSPECT_PORT}",
      "restart": true,
      "timeout": 20000,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Launch: Mock LSP Server (break on start)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test/mock-lsp-server.js",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--inspect-brk=9229"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Run Extension: Mock Language (LSP @6009)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/mock-language-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/mock-language-extension/out/**/*.js"
      ],
      "preLaunchTask": "compile:mock-language",
      "postDebugTask": "none",
      "trace": true
    }
  ]
}
