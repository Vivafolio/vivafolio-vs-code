{
  "name": "blockprotocol-poc",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
    "dev:once": "cross-env NODE_ENV=development tsx src/server.ts",
    "build": "rimraf dist && cross-env NODE_ENV=production tsc -p tsconfig.server.json && vite build",
    "start": "cross-env NODE_ENV=production node dist/server/server.js",
    "test": "playwright test"
  },
  "dependencies": {
    "express": "^4.19.2",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@playwright/test": "1.52.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/ws": "^8.5.10",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.0",
    "vite": "^5.2.0"
  }
}
